function robot_under_door!(r::Robot) 
    side = Ost
    search_door!(r,side)
end

function search_door!(r::Robot,side::HorizonSide)
    i = 1
    while (isborder(r,Nord) == true)
    m = 0
            while (m != i)
                move!(r,side)
                m+=1
            end
            i+=1
            side = invers(side)
    end
end
