using HorizonSideRobots
r = Robot(animate = true)

function task8!(r, Nord, West, Sud, Ost)
    i = 1
    while !ismarker(r) == 1
        a = i
        if i % 2 == 1
            while a != 0
                move!(r, West)
                if ismarker(r)
                    break
                end
                a -= 1
            end
            a = i
            while a != 0
                move!(r, Nord)
                if ismarker(r)
                    break
                end
                a -= 1
            end
        else
 
            while a != 0
                move!(r, Ost)
                if ismarker(r)
                    break
                end
                a -= 1
            end
            a = i
            while a != 0
                move!(r, Sud)
                if ismarker(r)
                    break
                end
                a -= 1
            end
        end
        i += 1
    end
end
